Table User {
  id int [pk, increment]
  name varchar
  email varchar [unique]
  phone varchar
  role varchar // farmer, buyer, extension_agent, ngo_partner
  location varchar
  language varchar // Swahili, English
}

Table FarmerProfile {
  id int [pk, increment]
  user_id int [unique, ref: > User.id]
  farm_size varchar
  farm_type varchar // arid, semi-arid, wetlands
  primary_crop varchar
  primary_livestock varchar
}

Table Category {
  id int [pk, increment]
  name varchar
}

Table Product {
  id int [pk, increment]
  farmer_id int [ref: > FarmerProfile.id]
  category_id int [ref: > Category.id]
  name varchar
  description text
  price decimal
  unit varchar
  stock_quantity int
}

Table Order {
  id int [pk, increment]
  buyer_id int [ref: > User.id]
  product_id int [ref: > Product.id]
  quantity int
  total_price decimal
  order_status varchar // pending, completed, cancelled
  payment_status varchar // unpaid, paid
  order_date datetime
}

Table WeatherUpdate {
  id int [pk, increment]
  location varchar
  forecast_date date
  temperature float
  rainfall float
  advice text
}

Table MarketPrice {
  id int [pk, increment]
  commodity varchar
  unit varchar
  min_price decimal
  max_price decimal
  market_location varchar
  date date
}

Table ExtensionService {
  id int [pk, increment]
  title varchar
  description text
  category varchar // training, pest management, irrigation
  offered_by int [ref: > User.id]
}

Table FarmerExtension {
  id int [pk, increment]
  farmer_id int [ref: > FarmerProfile.id]
  service_id int [ref: > ExtensionService.id]
}

Table TrainingResource {
  id int [pk, increment]
  title varchar
  format varchar // video, text, pdf
  language varchar
  url varchar
  category_id int [ref: > Category.id]
}

Table AgriLoan {
  id int [pk, increment]
  provider varchar
  amount decimal
  interest_rate float
  repayment_terms text
  eligibility text
  user_id int [ref: > User.id]
}

Table Cooperative {
  id int [pk, increment]
  name varchar
  location varchar
  members_count int
}

Table UserCooperative {
  id int [pk, increment]
  user_id int [ref: > User.id]
  cooperative_id int [ref: > Cooperative.id]
}

Table Transport {
  id int [pk, increment]
  provider_name varchar
  contact varchar
  routes text
  price_per_km decimal
}

Table OrderTransport {
  id int [pk, increment]
  order_id int [ref: > Order.id]
  transport_id int [ref: > Transport.id]
}

Table Review {
  id int [pk, increment]
  user_id int [ref: > User.id]
  product_id int [ref: > Product.id]
  rating int
  comment text
  date datetime
}

Table Notification {
  id int [pk, increment]
  user_id int [ref: > User.id]
  message text
  type varchar // weather, market, order
  is_read boolean
}
